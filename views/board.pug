extends layout

block content
  h1 Sumanth Yeruva 
  p Rows = #{query.rows};
  p Columns = #{query.cols};

  - let rows = Number(query.rows)
  - let cols = Number(query.cols)

  - if (!Number.isInteger(rows) || !Number.isInteger(cols))
    p Invalid input. Please enter integers for rows and cols.
  - else if (rows < 1 || rows > 10)
    p Rows should be between 1 and 10.
  - else if (cols < 1 || cols > 10)
    p Cols should be between 1 and 10.
  - else
    table#outer
      - for(let i = 0; i < rows; i++)
        tr#middle
          - for(let j = 0; j < cols; j++)
            - let cellValue = (i === j) ? 1 : (i === j + 1) ? 2 : (i === j - 1) ? i : 0
            td= cellValue
  